---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import QueHay from '../components/QueHay.astro';
import ArepaWeek from '../components/ArepaWeek.astro';

const products = {
	arepas: [
		{
			name: 'Arepa 1',
			image: '/prodArepa.png',
			price: "$ 7.500",
			ingredients: ["ingrediente 1", "ingrediente 2", "ingrediente 3"],
		},
		{
			name: 'Arepa 2',
			image: '/prodArepa.png',
			price: "$ 10.500",
			ingredients: ["ingrediente 1", "ingrediente 2", "ingrediente 3"],
		},
		{
			name: 'Arepa 3',
			image: '/prodArepa.png',
			price: "$ 12.000",
			ingredients: ["ingrediente 1", "ingrediente 2", "ingrediente 3"],
		}
	]
}

---

<Layout title="Aretáz">
	<main class="flex items-center flex-col w-full h-dvh bg-white ">
		<h1 class="text-2xl my-3 text-[#ff4d07] font-bold">Aretaz</h1>
		<section class="flex relative flex-col items-center w-[95%] h-[85%] bg-[#f4ead2] rounded-xl shadow-inner overflow-y-auto">
			<Header />
			<QueHay />
			<ArepaWeek />
			<section class="w-full min-h-dvh bg-[#ffc721] text-center">
				<h2 class="text-6xl my-3 text-white">Menú</h2>
				<span class="text-2xl">Disfruta de las mejores arepas rellenas de Bucaramanga</span>
				<article class="w-full flex flex-wrap items-center justify-center gap-2 my-6">
					<span class="text-2xl text-[#ff4d07]">Arepas Rellenas</span>
					{products.arepas.map((product) => (
						<div class="card relative flex bg-white w-80 p-2 rounded-md gap-[.5rem] h-max">
							<div class="bar w-2 rounded-md bg-[#ff4d07] transition-all transition-duration-500"></div>
							<figure class="card_form flex justify-center items-center bg-[#ff4d07]">
								<img src={product.image} alt="arepa" class="w-16 m-auto" />
							</figure>
